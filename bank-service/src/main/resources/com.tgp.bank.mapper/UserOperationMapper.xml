<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tgp.bank.mapper.UserOperationMapper">

    <insert id="batchInsert" parameterType="java.util.List">
        <choose>
            <when test="userOperationList != null and !userOperationList.isEmpty()">
                INSERT INTO user_operation (operation_username, operation, operation_time, operation_amount,
                transfer_name)
                VALUES
                <foreach collection="list" item="item" separator=",">
                    (#{item.operationUsername}, #{item.operation}, #{item.operationTime}, #{item.operationAmount},
                    #{item.transferName})
                </foreach>
            </when>
            <otherwise>
                select 1;
            </otherwise>
        </choose>
    </insert>
</mapper>
